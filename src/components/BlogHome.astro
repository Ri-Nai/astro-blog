---
import { getCollection } from "astro:content";
import ArticleList from "./ArticleList.astro";
import { profileConfig } from "../config";

const allPosts = await getCollection("blog", ({ data }) => {
  return !data.draft;
});
const visiblePosts = allPosts.filter((post) => !post.data.hidden);
const recentPosts = visiblePosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);

const allTags = [...new Set(visiblePosts.flatMap((post) => post.data.tags))];

// çƒ­é—¨æ ‡ç­¾
const tagCounts = allTags.reduce(
  (acc, tag) => {
    acc[tag] = visiblePosts.filter((post) =>
      post.data.tags.includes(tag),
    ).length;
    return acc;
  },
  {} as Record<string, number>,
);

// åŠ¨æ€å¯¼å…¥SVGæ–‡ä»¶
const svgContents: Record<string, string> = {};

// æ ¹æ®configä¸­çš„socialLinksåŠ¨æ€å¯¼å…¥SVG
for (const link of profileConfig.socialLinks) {
  if (link.icon.startsWith('/icons/')) {
    try {
      // åŠ¨æ€å¯¼å…¥SVGæ–‡ä»¶
      const svgModule = await import(`/public${link.icon}?raw`);
      svgContents[link.icon] = svgModule.default;
    } catch (error) {
      console.error(`Failed to import SVG: ${link.icon}`, error);
      svgContents[link.icon] = '';
    }
  }
}

