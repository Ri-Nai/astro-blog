<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById("mobile-menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuToggle?.addEventListener("click", () => {
    mobileMenuToggle.classList.toggle("active");
    mobileMenu?.classList.toggle("show");
  });

  // Theme toggle
  const themeToggle = document.getElementById("theme-toggle");
  const lightIcon = document.querySelector(".theme-icon.light");
  const darkIcon = document.querySelector(".theme-icon.dark");

  // æ£€æŸ¥æœ¬åœ°å­˜å‚¨æˆ–ç³»ç»Ÿåå¥½
  const getPreferredTheme = () => {
    const stored = localStorage.getItem("theme");
    if (stored) return stored;
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };

  const setTheme = (theme: string) => {
    document.documentElement.setAttribute("data-theme", theme);
    document.documentElement.setAttribute("data-color-mode", theme);
    localStorage.setItem("theme", theme);

    if (theme === "dark") {
      (lightIcon as HTMLElement)?.style.setProperty("opacity", "0");
      (lightIcon as HTMLElement)?.style.setProperty(
        "transform",
        "rotate(180deg)",
      );
      (darkIcon as HTMLElement)?.style.setProperty("opacity", "1");
      (darkIcon as HTMLElement)?.style.setProperty("transform", "rotate(0deg)");
    } else {
      (lightIcon as HTMLElement)?.style.setProperty("opacity", "1");
      (lightIcon as HTMLElement)?.style.setProperty(
        "transform",
        "rotate(0deg)",
      );
      (darkIcon as HTMLElement)?.style.setProperty("opacity", "0");
      (darkIcon as HTMLElement)?.style.setProperty(
        "transform",
        "rotate(180deg)",
      );
    }
  };

  // åˆå§‹åŒ–ä¸»é¢˜
  setTheme(getPreferredTheme());

  themeToggle?.addEventListener("click", () => {
    const currentTheme = document.documentElement.getAttribute("data-theme");
    const newTheme = currentTheme === "dark" ? "light" : "dark";
    setTheme(newTheme);
  });

  // ç›‘å¬ç³»ç»Ÿä¸»é¢˜å˜åŒ–
  window
    .matchMedia("(prefers-color-scheme: dark)")
    .addEventListener("change", (e) => {
      if (!localStorage.getItem("theme")) {
        setTheme(e.matches ? "dark" : "light");
      }
    });

  // æœç´¢åŠŸèƒ½
  const searchToggle = document.getElementById("search-toggle");
  const searchModal = document.getElementById("search-modal");
  const searchClose = document.getElementById("search-close");
  const searchInput = document.getElementById("search-input");
  const searchResults = document.getElementById("search-results");

  // æ‰“å¼€æœç´¢æ¨¡æ€æ¡†
  searchToggle?.addEventListener("click", () => {
    searchModal?.classList.add("show");
    setTimeout(() => {
      searchInput?.focus();
    }, 100);
  });

  // å…³é—­æœç´¢æ¨¡æ€æ¡†
  function closeSearchModal() {
    searchModal?.classList.remove("show");
    if (searchInput) (searchInput as HTMLInputElement).value = "";
    if (searchResults)
      searchResults.innerHTML =
        '<p class="search-placeholder">å¼€å§‹è¾“å…¥ä»¥æœç´¢æ–‡ç« ...</p>';
  }

  searchClose?.addEventListener("click", closeSearchModal);
  searchModal?.addEventListener("click", (e) => {
    if (
      e.target === searchModal ||
      (e.target as HTMLElement)?.classList.contains("search-overlay")
    ) {
      closeSearchModal();
    }
  });

  // æœç´¢åŠŸèƒ½
  let searchTimeout: NodeJS.Timeout;
  searchInput?.addEventListener("input", (e) => {
    const query = (e.target as HTMLInputElement).value.trim();

    clearTimeout(searchTimeout);

    if (query.length < 2) {
      searchResults!.innerHTML =
        '<p class="search-placeholder">å¼€å§‹è¾“å…¥ä»¥æœç´¢æ–‡ç« ...</p>';
      return;
    }

    searchTimeout = setTimeout(() => {
      performSearch(query);
    }, 300);
  });

  // æ‰§è¡Œæœç´¢
  async function performSearch(query: string) {
    try {
      // è¿™é‡Œå¯ä»¥å®ç°å®é™…çš„æœç´¢é€»è¾‘
      // ç›®å‰ä½¿ç”¨ç®€å•çš„å®¢æˆ·ç«¯æœç´¢
      const response = await fetch("/blog/index.json");
      const posts = await response.json();

      const results = posts.filter(
        (post: any) =>
          post.title.toLowerCase().includes(query.toLowerCase()) ||
          post.description?.toLowerCase().includes(query.toLowerCase()) ||
          post.content?.toLowerCase().includes(query.toLowerCase()),
      );

      displaySearchResults(results, query);
    } catch (error) {
      console.error("æœç´¢å¤±è´¥:", error);
      searchResults!.innerHTML =
        '<p class="search-no-results">æœç´¢å¤±è´¥ï¼Œè¯·ç¨åé‡è¯•</p>';
    }
  }

  // æ˜¾ç¤ºæœç´¢ç»“æœ
  function displaySearchResults(results: any[], query: string) {
    if (results.length === 0) {
      searchResults!.innerHTML =
        '<p class="search-no-results">æœªæ‰¾åˆ°ç›¸å…³æ–‡ç« </p>';
      return;
    }

    const resultsHTML = results
      .map(
        (post) => `
      <div class="search-result-item" onclick="window.location.href='${post.url}'">
        <h4 class="search-result-title">${highlightText(post.title, query)}</h4>
        ${post.description ? `<p class="search-result-excerpt">${highlightText(post.description, query)}</p>` : ""}
        <div class="search-result-meta">
          <span>ğŸ“… ${new Date(post.date).toLocaleDateString("zh-CN")}</span>
          ${post.category ? `<span>ğŸ“‚ ${post.category}</span>` : ""}
        </div>
      </div>
    `,
      )
      .join("");

    searchResults!.innerHTML = resultsHTML;
  }

  // é«˜äº®æœç´¢å…³é”®è¯
  function highlightText(text: string, query: string): string {
    if (!query) return text;
    const regex = new RegExp(`(${query})`, "gi");
    return text.replace(regex, "<mark>$1</mark>");
  }

  // é”®ç›˜å¿«æ·é”®
  document.addEventListener("keydown", (e) => {
    // Ctrl/Cmd + K æ‰“å¼€æœç´¢
    if ((e.ctrlKey || e.metaKey) && e.key === "k") {
      e.preventDefault();
      searchToggle?.click();
    }

    // ESC å…³é—­æœç´¢
    if (e.key === "Escape" && searchModal?.classList.contains("show")) {
      closeSearchModal();
    }
  });
</script>
